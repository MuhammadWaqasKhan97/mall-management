<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard || Falcon Mart</title>

	<link rel="icon" type="image/png" href="img/icon.ico"/>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
        crossorigin="anonymous">
</head>

<body>
    <div class="nav-side-menu">
        <div class="brand brand-color">
            <h4>Falcon Mart Panel</h4>

            <span style='font-size:18px'>Manager: <span style='display:inline;font-size:14px'>
                    <%= manager.name %></span></span>
        </div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
        <div class="menu-list">
            <ul id="menu-content" class="menu-content collapse out">
                <li onClick="navigate('shop_div')">
                    <a>

                        <i class="fas fa-stroopwafel"></i> Shop
                    </a>
                </li>
                <li onClick="navigate('add_shop_div')">
                    <a>
                        <i class="fab fa-houzz"></i> Add Shop
                    </a>
                </li>
                <li onClick="navigate('security_forms_div')">
                    <a>
                        <i class="fas fa-shield-alt"></i> Security Forms
                    </a>
                </li>
                <li onClick="navigate('notifications_div')">
                    <a>
                        <i class="far fa-bell"></i> Notification
                        <% let count = 0; for(let i=0;i<notifications.length;i++){  if( notifications[i].flag==="unread"){ count++ ;     }}  ;  if(count>0){ %>
                        <span class="badge badge-light">
                            <%= count %></span>
                        <%      } %>
                    </a>
                </li>
                <li onClick="navigate('utility_div')">
                    <a>
                        <i class="fas fa-wrench"></i> Utilities
                    </a>
                </li>
                <li onClick="navigate('rental_docs_div')">
                    <a>
                        <i class="fas fa-file"></i> Rental Documents
                    </a>
                </li>

                <li onClick="navigate('employees_div')">
                    <a>
                        <i class="fas fa-users"></i> Employees
                    </a>
                </li>
                <li onClick="navigate('add_employees_div')">
                    <a>
                        <i class="fas fa-user-tie"></i> Add Employees
                    </a>
                </li>
                <li onClick="navigate('settings_div')">
                    <a>
                        <i class="fas fa-cog"></i> Settings
                    </a>
                </li>
            </ul>
            <div class="text-center">
                <a href="/logout" class="btn btn-warning">Logout</a>
            </div>
        </div>
    </div>
    <div class="container fal-container" id="main">
        <!---       shop_div        ------>
        <div class="row" id="shop_div">
            <div class="col-md-12">
                <h3 class="comp-name text-center">Shop</h3>
                <hr>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text search-text">Search By Title,Shop Name</span>
                    </div>
                    <input type="text" class="form-control search-text-box" placeholder="Title,Shop Name?" id='shop_q'
                        onkeyup="search_shop()">
                </div>
                <table class="table table-light table-striped table-hover table-panel">
                    <thead>
                        <tr class="table-info">
                            <th>Shop Name</th>
                            <th>Shop Owner</th>
                            <th>Shop Email</th>
                            <th>Phone Number</th>
                            <th>Due/Paid</th>
                        </tr>
                    </thead>
                    <tbody id='shop_table'>
                        <% shops.forEach((shop)=>{ if( parseInt(shop.approved_flag)!==0){ %>
                        <tr <% let date=new Date().getTime(); if((parseInt(shop.last_paid)+(30*86400*1000))<date){ %>
                            class = 'table-danger'
                            <% } %>
                            id='
                            <%= shop._id %>'>
                            <th><button class="btn btn-primary" style="min-width:11em; height:3em;" onClick="get_shop(this.parentNode.parentNode.id)">
                                    <%= shop.name %></button></th>
                            <td>
                                <%= shop.owner_name %>
                            </td>
                            <td>
                                <%= shop.email %>
                            </td>
                            <td>
                                <%= shop.phone %>
                            </td>
                            <td>
                                <%  date= new Date().getTime(); if((parseInt(shop.last_paid)+(30*86400*1000))<date){ %>
                                <span style='font-weight:600'>Due</span>
                                <% }else{ %>

                                <span style='font-weight:600;font-size:18px'>Paid</span>

                                <% } %>
                            </td>
                        </tr>
                        <%  }}) %>
                    </tbody>
                </table>
            </div>
        </div>


        <!----      shop_div        ----------->
        <!---       specific_shop_div        ------>
        <div class="row" id="specific_shop_div" style='display:none'>
            <div class="col-md-12">
                <h3 class="comp-name"><span id='specific_shop_name'></span></h3>
                <h5>Rent Status : <span id='specific_shop_rent_status'></span><span style='float:right'>Last Paid:<span
                            id='specific_last_paid' style='font-size:14px;font-weight:600'></span></span></h5>
                <hr>
                <!-- Nav pills -->
                <ul class="nav nav-pills" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#s_s_employee_list">Employee List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#s_s_bills">Utility Bills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#s_s_docs">Docs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#s_s_security">Security Form</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#s_s_notice">Send Notice</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div id="s_s_employee_list" class="container tab-pane active"><br>
                        <h3>Employee List</h3>
                        <div id='specific_shop_employee_list' style='overflow:scroll;max-height:100vh'></div>
                    </div>



                    <div id="s_s_bills" class="container tab-pane fade"><br>
                        <h3 class="comp-name">Utility Bills</h3>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text search-text">Search By Title,Shop Name</span>
                            </div>
                            <input type="text" class="form-control search-text-box" placeholder="Title,Shop Name?" id='s_s_bill_q'
                                onkeyup="s_s_search_bill()">
                        </div>

                        <table class="table table-light table-striped table-hover table-panel">
                            <thead>
                                <tr class="table-info">
                                    <th>Title</th>
                                    <th>Upload Date</th>
                                    <th>Download</th>
                                </tr>
                            </thead>
                            <tbody id='s_s_bill_table'>

                            </tbody>
                        </table>
                    </div>
                    <div id="s_s_docs" class="container tab-pane fade"><br>
                        <h3 class="comp-name">Docs</h3>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text search-text">Search By Title,Shop Name</span>
                            </div>
                            <input type="text" class="form-control search-text-box" placeholder="Title,Shop Name?" id='s_s_doc_q'
                                onkeyup="s_s_search_doc()">
                        </div>

                        <table class="table table-light table-striped table-hover table-panel">
                            <thead>
                                <tr class="table-info">
                                    <th>Title</th>
                                    <th>Upload Date</th>
                                    <th>Download</th>

                                </tr>
                            </thead>
                            <tbody id='s_s_doc_table'>

                            </tbody>
                        </table>
                    </div>
                    <div id="s_s_security" class="container tab-pane fade"><br>
                        <h3>Security Form</h3>
                        <div class='container-fluid' id='s_s_securities'>


                        </div>
                    </div>
                    <div id="s_s_notice" class="container tab-pane fade"><br>
                        <h3 class="comp-name">Send Notice</h3>
                        <div class='container-fluid'>
                            <form action='/send_notice' method='POST'>
                                <div class="row">
                                    <div class="col-8">
                                        <div class="form-group row">
                                            <div class="col-2">
                                                <label for="name">Title:</label>
                                            </div>
                                            <div class="col-10">
                                                <input type="text" class="form-control" placeholder="Enter Title" name="title">
                                                <input type='hidden' id='input_shop_id' name="shop_id">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-2">
                                                <label for="name">Detail:</label>
                                            </div>
                                            <div class="col-10">
                                                <textarea type="text" class="form-control" placeholder="Detailed Notice"
                                                    name="detail">
                                                        </textarea>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="text-center">
                                            <button class='btn btn-primary'>Send</button>
                                        </div>

                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <!--- tab panes --->


            </div>
        </div>


        <!----      specific_shop_div        ----------->
        <!----      security_forms_div        ----------->

        <div class="row" id="security_forms_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Security Forms</h3>
                <hr>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text search-text">Search By Name,Cnic,Address</span>
                    </div>
                    <input type="text" class="form-control search-text-box" placeholder="Shop Name,CNIC,Address?" id='security_form_q'
                        onkeyup="search_security_form()">
                </div>

                <table class="table table-light table-striped table-hover table-panel">
                    <thead>
                        <tr class="table-info">
                            <th>Shop Name</th>
                            <th>Name</th>
                            <th>Cnic</th>
                            <th>Address</th>

                        </tr>
                    </thead>
                    <tbody id='security_form_table'>

                    </tbody>
                </table>
            </div>
        </div>
        <!----      security_form_div        ----------->

        <!---       add_shop_div        ------>
        <div class="row" id="add_shop_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Add Shop
                </h3>
                <hr>
                <div class="col-md-10">
                    <div class="alert alert-success alert-dismissible  fade show" style="display:none" id="alert_add_shop">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Success!</strong> Shop is registred in database. Admin will approve it
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Shop No:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Shop Number" id="number">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Shop Name:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Shop Name" id="name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Shop Type:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Shop Type" id="type">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Owner Name:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Shop Owner Name" id="owner_name"
                                onChange="check_pwd()">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Email:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="A Valid Email" id="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Phone No:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Shop Phone Number" id="phone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="name">Monthly Rent:</label>
                        </div>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Shop monthly Rent" id="rent">
                        </div>
                    </div>

                    <br>
                    <div class="text-center">
                        <button class="btn btn-primary" onClick="add_shop()">Register</button>
                    </div>
                </div>
                <br>
                <hr>
                <h3>Shops Waiting For Approval From Admin</h3>
                <table class="table table-light table-striped table-hover table-panel">
                    <thead>
                        <tr class="table-info">
                            <th>Shop Name</th>
                            <th>Shop Owner</th>
                            <th>Shop Email</th>
                            <th>Phone Number</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody id='shop_table'>
                        <% shops.forEach((shop)=>{ if( parseInt(shop.approved_flag)===0){ %>
                        <tr>
                            <th>
                                <%= shop.name %>
                            </th>
                            <td>
                                <%= shop.owner_name %>
                            </td>
                            <td>
                                <%= shop.email %>
                            </td>
                            <td>
                                <%= shop.phone %>
                            </td>
                            <td> <button id='<%= shop._id %>' class="btn btn-danger" onClick="delete_shop(this)">Delete</button>
                            </td>
                        </tr>
                        <%  }}) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!----      add_shop_div        ----------->
        <!---       notifications_div        ------>
        <div class="row" id="notifications_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Notification
                </h3>
                <hr>
                <% notifications.forEach((notification)=>{ if(notification.flag==="unread"){ %>
                <div class="alert alert-success alert-dismissible" id='<%= notification._id %>'>
                    <button type="button" class="close" data-dismiss="alert" onClick='read(this.parentNode.id)'>&times;</button>
                    <strong>
                        <%= notification.title %></strong> <span>
                        <% let date=  new Date(parseInt(notification.date)); %>
                        <%= date %></span>
                    <p>
                        <%= notification.detail %>
                    </p>
                </div>
                <% }}) %>
                <hr>
                <h4 class="not-text">Old Notifications</h4>
                <% notifications.forEach((notification)=>{ if(notification.flag!=="unread"){ %>
                <div class="alert alert-primary alert-dismissible" id='<%= notification._id %>'>
                    <strong>
                        <%= notification.title %></strong> <span>
                        <% let date=  new Date(parseInt(notification.date)); %>
                        <%= date %></span>
                    <p>
                        <%= notification.detail %>
                    </p>
                </div>
                <% }}) %>
            </div>
        </div>

        <!---       notifications_div        ------>

        <!---       settings_div        ------>
        <div class="row" id="settings_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Settings
                </h3>
                <hr>
                <div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label for="email" class="float-right">Old Password:</label>
                        </div>
                        <div class="col-8">
                            <input type="password" class="form-control" placeholder="Enter Old Password" id="old_pwd">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label for="pwd" class="float-right">New Password:</label>
                        </div>
                        <div class="col-8">
                            <input type="password" class="form-control" placeholder="Enter New password" id="pwd">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label for="pwd" class="float-right">Confirm Password:</label>
                        </div>
                        <div class="col-8">
                            <input type="password" class="form-control" placeholder="Confirm password" id="pwd_2"
                                onChange="check_pwd()">
                        </div>
                    </div>

                    <br><br>
                    <div class="text-center">
                        <button disabled id='pwd_btn' class="btn btn-primary" onClick="pwd_change(this)">Change
                            Password</button>
                    </div>
                </div>
            </div>
        </div>

        <!----      settings_div        ----------->
        <!----      utility_div        ----------->

        <div class="row" id="utility_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Utilities</h3>
                <HR>
                <div class='container'>
                    <h4>UPLOAD UTILITY BILLS</h4>
                    <hr>
                    <form action='/shop/bills' method="POST" enctype='multipart/form-data'>
                        <div class="form-group row">
                            <div class="col-2">
                                <label for="title">Shop Name:</label>
                            </div>
                            <div class="col-10">
                                <select class="form-control" name="shop">
                                    <% shops.forEach((shop)=>{ %>
                                    <option value="<%= shop.name %>">
                                        <%= shop.name %>
                                    </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label for="title">Title:</label>
                            </div>
                            <div class="col-10">
                                <input type="text" class="form-control" placeholder="Enter Title/Little Description"
                                    name="title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label for="file">file:</label>
                            </div>
                            <div class="col-10">
                                <input type="file" class="form-control-file" name="bill">
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary">Upload</button>
                        </div>
                    </form>
                </div>

                <hr>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text search-text">Search By Title,Shop Name</span>
                    </div>
                    <input type="text" class="form-control search-text-box" placeholder="Title,Shop Name?" id='bill_q'
                        onkeyup="search_bill()">
                </div>

                <table class="table table-light table-striped table-hover table-panel">
                    <thead>
                        <tr class="table-info">
                            <th>Title</th>
                            <th>Upload Date</th>
                            <th>Shop Name</th>
                            <th>Download</th>

                        </tr>
                    </thead>
                    <tbody id='bill_table'>

                    </tbody>
                </table>
            </div>
        </div>
        <!----      utility_div        ----------->
        <!----      rental_div        ----------->

        <div class="row" id="rental_docs_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Rental Documents
                </h3>
                <hr>
                <div class='container'>
                    <h4 class="text-center">UPLOAD RENTAL DOC</h4>
                    <hr>
                    <form action='/shop/docs' method="POST" enctype='multipart/form-data'>
                        <div class="form-group row">
                            <div class="col-2">
                                <label for="title">Shop Name:</label>
                            </div>
                            <div class="col-10">
                                <select class="form-control" name="shop">
                                    <% shops.forEach((shop)=>{ %>
                                    <option value="<%= shop.name %>">
                                        <%= shop.name %>
                                    </option>
                                    <% }) %>
                                </select>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label for="title">Title:</label>
                            </div>
                            <div class="col-10">
                                <input type="text" class="form-control" placeholder="Enter Title/Little Description"
                                    name="title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label for="file">file:</label>
                            </div>
                            <div class="col-10">
                                <input type="file" class="form-control-file" name="doc">
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary">Upload</button>
                        </div>
                    </form>
                </div>

                <hr>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Search By Title,Shop Name</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Title,Shop Name?" id='doc_q' onkeyup="search_doc()">
                </div>

                <table class="table table-light table-striped table-hover table-panel">
                    <thead>
                        <tr class="table-info">
                            <th>Title</th>
                            <th>Upload Date</th>
                            <th>Shop Name</th>
                            <th>Download</th>

                        </tr>
                    </thead>
                    <tbody id='doc_table'>



                    </tbody>
                </table>
            </div>
        </div>
        <!----      rental_doc_div        ----------->
        <!---       employees_div        ------>
        <div class="row" id="employees_div" style='display:none'>
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Employees
                </h3>

                <hr>
                <% employees.forEach((employee)=>{ %>
                <div class="container py-3">
                    <div class="card">
                        <div class="row ">
                            <div class="col-md-8 px-3">
                                <div class="card-block px-3">
                                    <div class="row person-data">
                                        <div class="col-4">
                                            <p>Designation</p>
                                        </div>
                                        <div class="col-8">
                                            <%= employee.role %>
                                        </div>
                                    </div>

                                    <div class="row person-data">
                                        <div class="col-4">
                                            <p>Name</p>
                                        </div>
                                        <div class="col-8">
                                            <%= employee.name %>

                                        </div>
                                    </div>

                                    <div class="row person-data">
                                        <div class="col-4">
                                            <p>Father Name</p>
                                        </div>
                                        <div class="col-8">
                                            <%= employee.father_name %>

                                        </div>
                                    </div>

                                    <div class="row person-data">
                                        <div class="col-4">
                                            <p>Cnic No.</p>
                                        </div>
                                        <div class="col-8">
                                            <%= employee.cnic %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <img src="<%= employee.pic %>" class="w-100">
                            </div>

                        </div>
                    </div>
                </div>


                <% }) %>
            </div>
        </div>

        <!----      employees_div        ----------->
        <!---       add_employees_div        ------>
        <div class="row" id="add_employees_div" style="display:none">
            <div class="col-md-12">
                <h3 class="comp-name text-center"> Add Employees
